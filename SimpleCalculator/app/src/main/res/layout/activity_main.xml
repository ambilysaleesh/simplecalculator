<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background= "@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Simple Calculator"
        android:id="@+id/textsimple_calc"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_marginTop="54dp"
        android:text="0"
        android:layout_below="@+id/textsimple_calc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textStyle="bold"
        android:gravity="right"
        android:textSize="20sp"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:id="@+id/button_7"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="buttonseven"
        android:textStyle="bold" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:id="@+id/button_8"
        android:layout_alignTop="@+id/button_7"
        android:layout_toRightOf="@+id/button_7"
        android:layout_toEndOf="@+id/button_7"
        android:onClick="buttoneight"
        android:textStyle="bold" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:id="@+id/button_9"
        android:layout_alignTop="@+id/button_8"
        android:layout_toRightOf="@+id/button_8"
        android:layout_toEndOf="@+id/button_8"
        android:onClick="buttonnine"
        android:textStyle="bold" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:id="@+id/button_4"
        android:layout_below="@+id/button_7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="buttonfour"
        android:textStyle="bold" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/button_5"
        android:layout_alignBottom="@+id/button_4"
        android:layout_toRightOf="@+id/button_7"
        android:layout_toEndOf="@+id/button_7"
        android:onClick="buttonfive"
        android:textStyle="bold" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:id="@+id/button_6"
        android:layout_below="@+id/button_8"
        android:layout_alignLeft="@+id/button_9"
        android:layout_alignStart="@+id/button_9"
        android:onClick="buttonsix"
        android:textStyle="bold" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/button_1"
        android:layout_below="@+id/button_4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="buttonone"
        android:textStyle="bold" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/button_2"
        android:layout_alignBottom="@+id/button_1"
        android:layout_alignLeft="@+id/button_5"
        android:layout_alignStart="@+id/button_5"
        android:onClick="buttontwo"
        android:textStyle="bold" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/button_3"
        android:layout_below="@+id/button_6"
        android:layout_alignLeft="@+id/button_6"
        android:layout_alignStart="@+id/button_6"
        android:onClick="buttonthree"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="."
        android:id="@+id/button_dot"
        android:layout_below="@+id/button_1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/button_2"
        android:layout_toStartOf="@+id/button_2"
        android:onClick="buttondot"
        android:textStyle="bold" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/button_0"
        android:layout_below="@+id/button_2"
        android:layout_toRightOf="@+id/button_dot"
        android:layout_toEndOf="@+id/button_dot"
        android:onClick="buttonzero"
        android:textStyle="bold" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="c"
        android:id="@+id/button_clear"
        android:layout_alignBottom="@+id/button_0"
        android:layout_toRightOf="@+id/button_2"
        android:layout_toEndOf="@+id/button_2"
        android:onClick="buttonclear"
        android:textStyle="bold" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/button_plus"
        android:layout_alignTop="@+id/button_9"
        android:layout_toRightOf="@+id/textsimple_calc"
        android:layout_toEndOf="@+id/textsimple_calc"
        android:onClick="buttonplus"
        android:textStyle="bold" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/button_mins"
        android:onClick="buttonminus"
        android:layout_alignTop="@+id/button_6"
        android:layout_alignLeft="@+id/button_multi"
        android:layout_alignStart="@+id/button_multi"
        android:textStyle="bold" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:id="@+id/button_multi"
        android:layout_below="@+id/button_mins"
        android:layout_toRightOf="@+id/textsimple_calc"
        android:layout_toEndOf="@+id/textsimple_calc"
        android:onClick="buttonmulti"
        android:textStyle="bold" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:id="@+id/button_div"
        android:layout_below="@+id/button_multi"
        android:layout_toRightOf="@+id/textsimple_calc"
        android:layout_toEndOf="@+id/textsimple_calc"
        android:onClick="buttondiv"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:id="@+id/button_equal"
        android:layout_above="@+id/button_div"
        android:layout_toRightOf="@+id/button_mins"
        android:layout_toEndOf="@+id/button_mins"
        android:onClick="buttonequal"
        android:textStyle="bold" />

</RelativeLayout>
